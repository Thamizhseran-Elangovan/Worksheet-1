#include <iostream>
using namespace std;

int fact(int n) {
    if (n <= 1) return 1;
    return n * fact(n - 1);
}

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    int temp = num, sum = 0;
    while (temp > 0) {
        int digit = temp % 10;
        sum += fact(digit);
        temp /= 10;
    }

    if (sum == num)
        cout << num << " is a Krishnamurthy number." << endl;
    else
        cout << num << " is not a Krishnamurthy number." << endl;

    return 0;
}
