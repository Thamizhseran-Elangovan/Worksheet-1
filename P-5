#include <iostream>
using namespace std;

int main() {
    int units;
    cout << "Enter units of water consumed: ";
    cin >> units;

    double cost;
    if (units < 100)
        cost = units * 1.0;
    else if (units <= 500)
        cost = units * 1.5;
    else
        cost = units * 3.0;

    cout << "Water Tax = Rs." << cost << endl;
    return 0;
}
